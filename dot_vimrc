" general
set copyindent
set breakindent
set expandtab
set tabstop=8
set softtabstop=0
set viminfo=

" remaps
inoremap <C-g> <esc>
vnoremap <C-g> <esc>
nnoremap <Space> i_<Esc>r
nnoremap <expr> k (v:count == 0 ? 'gk' : 'k')
nnoremap <expr> j (v:count == 0 ? 'gj' : 'j')
nnoremap รถ :

" --- visual ---
syntax on
set number
set relativenumber
set laststatus=0
set guicursor+=a:blinkon0

" font
if has("gui_running")
  set guifont=JetBrains\ Mono:h17
endif
