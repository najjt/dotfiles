general {
        colors = true
        interval = 5
}

order += "load"
order += "memory"
order += "battery all"
order += "wireless _first_"
order += "tztime local"

wireless _first_ {
        format_up = "%essid"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status: %percentage %remaining"
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%a %d %b %H:%M"
}
