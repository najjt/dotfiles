#
# System
#

## Idle configuration

# lock screen after 300 seconds of inactivity, then turn off displays after another 60 seconds

exec swayidle -w \
          timeout 300 'swaylock -f -c 000000' \
          timeout 360 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
          before-sleep 'swaylock -f -c 000000'


## Input configuration

# Trackpad
input "1452:641:Apple_Internal_Keyboard_/_Trackpad" {
    dwt enabled                 # Disable while typing
    accel_profile adaptive      # adaptive/flat cursor acceleration
    pointer_accel 0             # From -1 to 1: Speed of cursor
    natural_scroll enabled
    scroll_factor 0.4
    scroll_method two_finger
    tap_button_map lmr
}

# Keyboard
input "1452:641:Apple_Internal_Keyboard_/_Trackpad" {
    repeat_rate 10
    repeat_delay 300
    xkb_layout us,se
    # switch layout with left shift
    xkb_options grp:rshift_toggle
}

## Background processes

# Network manager
exec_always nm-applet --indicator

# Binary space partitioning
exec_always autotiling

# Notifications
exec_always mako

# Rotating wallpaper
exec_always ~/tools/scripts/rotatingwallpaper.sh ~/resources/wallpapers 86400

#
# Variables
#

# Modifier keys
set $mod Mod1
set $cmd Mod4

# Terminal
set $term alacritty

# Editor
set $editor emacsclient -c -n -a '' -e '(select-frame-set-input-focus (selected-frame))'

# Browser
set $browser qutebrowser

# Application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened on the original workspace that the command was run on.
set $menu wofi --show run | xargs swaymsg exec --

# Workspace names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

#
# Defaults
#

font pango:JetBrains Mono 13

focus_follows_mouse no

gaps inner 2px
gaps outer 2px

default_border pixel 2
default_floating_border pixel 2

# GTK
set $gnome-schema org.gnome.desktop.interface
set $system_theme 'Arc-Dark'
set $system_icons 'Numix-Square'
set $system_dpi_scaling_factor 1.0
set $cursor_size 20
set $cursor_theme Adwaita

exec_always {
  gsettings set $gnome-schema gtk-theme $system_theme
  gsettings set $gnome-schema icon-theme $system_icons
  gsettings set $gnome-schema text-scaling-factor $system_dpi_scaling_factor
  gsettings set $gnome-schema cursor-theme $cursor_theme
  gsettings set $gnome-schema cursor-size $cursor_size
}

# Mouse
seat seat0 xcursor_theme $cursor_theme $cursor_size

#
# Keybindings
#

# Start a terminal
bindsym $mod+Return exec $term

# Start editor
bindsym Control+Return exec $editor

# Start browser
bindsym Control+Shift+Return exec $browser

# Start application launcher
bindsym $cmd+space exec $menu

# Kill focused window
bindsym $cmd+w kill

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout
bindsym $mod+Control+s layout stacking
bindsym $mod+Control+a layout toggle split

# Toggle tiling / floating
bindsym $mod+t floating toggle

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# Resize windows
bindsym $mod+Shift+a resize shrink width 5 px or 5 ppt
bindsym $mod+Shift+d resize grow width 5 px or 5 ppt
bindsym $mod+Shift+s resize shrink height 5 px or 5 ppt
bindsym $mod+Shift+w resize grow height 5 px or 5 ppt
bindsym $mod+Shift+0 exec sway-balance-workspace

# Reload the configuration file
bindsym $mod+Control+Shift+r reload

# Restart sway
bindsym $mod+Control+Shift+e restart

# Exit sway
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# Lock screen
bindsym ctrl+$mod+q exec swaylock -f -c 000000

# Volume
# bindsym XF86AudioRaiseVolume exec ~/tools/scripts/volume_brightness.sh volume_up
# bindsym XF86AudioLowerVolume exec ~/tools/scripts/volume_brightness.sh volume_down

# Brightness
# bindsym XF86AudioMute exec  ~/tools/scripts/volume_brightness.sh volume_mute
# bindsym XF86MonBrightnessUp exec ~/tools/scripts/volume_brightness.sh brightness_up
# bindsym XF86MonBrightnessDown exec ~/tools/scripts/volume_brightness.sh brightness_down

# Status bar
bar {
    swaybar_command waybar
}
