#
# System
#

# bsp
exec --no-startup-id ~/.config/i3/i3-alternating-layout/alternating_layouts.py

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
#exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Setup xss-lock daemon
exec_always --no-startup-id xset +dpms dpms 0 300 300
exec_always --no-startup-id xss-lock --transfer-sleep-lock -- ~/tools/scripts/lock.sh

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

#
# Defaults
#

font pango:JetBrains Mono 13

# workspace names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

focus_follows_mouse no

gaps inner 5px
gaps outer 5px

default_border pixel 4
default_floating_border pixel 4

#
# Keybindings
#

set $mod Mod4
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec wezterm

# start editor
bindsym Control+Return exec emacsclient -c -n -a '' -e '(select-frame-set-input-focus (selected-frame))'

# start browser
bindsym Control+Shift+Return exec qutebrowser

# start dmenu
bindsym $mod+space exec --no-startup-id rofi -show run

# kill focused window
bindsym $mod+w kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout
bindsym $mod+Control+s layout stacking
bindsym $mod+Control+a layout toggle split

# toggle tiling / floating
bindsym $mod+t floating toggle

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# reload the configuration file
bindsym $mod+Control+Shift+r reload

# restart i3
bindsym $mod+Control+Shift+e restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# lock screen
bindsym ctrl+$mod+q exec i3lock --ignore-empty-password --tiling 2>/dev/null

# resize windows
bindsym $mod+Shift+a resize shrink width 5 px or 5 ppt
bindsym $mod+Shift+d resize grow width 5 px or 5 ppt
bindsym $mod+Shift+s resize shrink height 5 px or 5 ppt
bindsym $mod+Shift+w resize grow height 5 px or 5 ppt
bindsym $mod+Shift+0 exec i3_balance_workspace

bindsym XF86AudioRaiseVolume exec ~/tools/scripts/volume_brightness.sh volume_up
bindsym XF86AudioLowerVolume exec ~/tools/scripts/volume_brightness.sh volume_down
bindsym XF86AudioMute exec  ~/tools/scripts/volume_brightness.sh volume_mute
bindsym XF86MonBrightnessUp exec ~/tools/scripts/volume_brightness.sh brightness_up
bindsym XF86MonBrightnessDown exec ~/tools/scripts/volume_brightness.sh brightness_down

bar {
        status_command i3status
}
